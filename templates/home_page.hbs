<!--syling as cant call custom styling via css-->
 <style>
/*cta styling*/

.btn-cta1{
  background-color: {{settings.brand_color}};
  color: {{settings.brand_text_color}};
  border-radius:22px;
  padding: 10px 18px;
  font-weight: 400;
 }

 .btn-cta1:hover{
  background-color:{{settings.brand_color_dmblue}};
  border-radius:22px;
  padding: 10px 18px;
  font-weight: 400;
 }

  .btn-cta2{
    background-color:{{settings.brand_color_softwhite}};
    color:{{settings.brand_color_black}};
    border-radius:22px;
    padding: 10px 18px;
    font-weight: 400;
  }

  .btn-cta2:hover{
    background-color:{{settings.brand_color}};
    color:{{settings.brand_color_softwhite}};
    border-radius:22px;
    padding: 10px 18px;
    font-weight: 400;
  }

.text-title{
  font-size: 1.25rem;
  font-weight: 600;
  color: {{settings.brand_color_darkgrey}};
}

.anchore-hero-description {
  box-sizing: border-box;
  color: {{settings.brand_color_softwhite}};
  font-family: 'Poppins', sans-serif;
 font-weight: 600;
  letter-spacing: -.01em;
  line-height: 40px;
  font-size: 32px!important;
  text-align: center;
  position: relative;
  z-index: 2;
  margin-bottom:1rem;

  @media (max-width: 992px) {
    line-height: 48px;
    font-size: 48px;
  }

  @media (min-width: 768px) {
    text-align: left;
    line-height: 40px;
    font-size: 40px;
  }

  @media (min-width: 981px) {
    line-height: 60px;
    font-size: 60px;
  }

  @media (min-width: 1200px) {
    line-height: 60px;
    font-size: 60px;
  }
}

.card-link:hover {
  background-color:{{settings.brand-color-softwhite}};
}

 </style> 

<div class="anchore-bg p-12">
  <div class="container mx-auto flex flex-wrap items-center">
    <!-- Left Column -->
    <div class="w-full lg:w-1/2 text-center lg:text-left px-4">
    <h1 class="mb-4 anchore-hero-header">{{settings.hero_banner_text}}</h1>
     <!-- <h1 class=" text-3xl mb-4">Hero Text Here</h1>-->
      <div class="anchore-hero-description">{{settings.hero_banner_description}}</div>
      <div class="max-w-md mx-auto lg:mx-0">
        {{search}}
      </div>
 
      <div class="flex justify-center lg:justify-start space-x-4 mt-4">
        <a href="{{settings.cta_one}}" class="btn-cta1">{{settings.cta_one_title}}</a>
        <a href="{{settings.cta_two}}" class="btn-cta2">{{settings.cta_two_title}}</a>
      </div>
    </div>
 
<!-- Right Column -->
<div class="w-full lg:w-1/2 flex justify-center lg:justify-end px-4">
      <img src="{{settings.hero_banner_image}}" alt="Hero Banner Image" class="max-w-xs lg:max-w-md transform transition duration-300 ease-in-out bg-transparent border px-4 py-4 shadow-sm  hover:animate-pulse">
    </div>
  </div>
</div>




<div class="video-background">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto mb-6">
      <h2 class="text-2xl font-semibold text-center mb-4">{{settings.homepage_video_title}}</h2>
      <div class="relative overflow-hidden pb-56">
        <iframe class="absolute top-0 left-0 w-full h-full" src="{{settings.homepage_video_url}}" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
      </div>
    </div>
  </div>
</div>

<!--NB card styling-->
