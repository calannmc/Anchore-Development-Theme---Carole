          <img src="{{../settings.category_card_icon_12}}" class="mx-auto object-contain max-image-size" />
        {{/is}}
        {{#is @index 12}}
          <img src="{{../settings.category_card_icon_13}}" class="mx-auto object-contain max-image-size" />
        {{/is}}
        {{#is @index 13}}
          <img src="{{../settings.category_card_icon_14}}" class="mx-auto object-contain max-image-size" />
        {{/is}}
        {{#is @index 14}}
          <img src="{{../settings.category_card_icon_15}}" class="mx-auto object-contain max-image-size" />
        {{/is}}
         {{#is @index 15}}
          <img src="{{../settings.category_card_icon_16}}" class="mx-auto object-contain max-image-size" />
        {{/is}}
        <!-- Add more conditions for other indices if needed -->
      </div>
      <span class="text-title">{{this.name}}</span>
          <p class="card-text-description line-clamp-2">{{this.description}}</p>
    </a>
  {{/each}}
</div>
  </div>
</section>
