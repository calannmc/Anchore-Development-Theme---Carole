<style>


   .article-section {
    background-color: {{settings.brand_color_softwhite}};
    border-radius:22px;
    padding:1rem;
    border: 1px solid {{settings.brand_color_slategrey}};
  }

  .article-section:hover {
  background-color:{{settings.brand_color_softwhite}};
}
</style>
<section class="anchore-bg p-12">
  <div class="container mx-auto flex flex-wrap items-center">
    <!-- Left Column -->
    <div class="w-full lg:w-1/2 text-center lg:text-left px-4">
    <h1 class="mb-4 anchore-hero-header">{{section.name}}</h1>
     
      
      <div class="max-w-md mx-auto lg:mx-0">
        {{search}}
      </div>
      </div>
      </div>
</section>

<div id="horizontal-menu" class="hidden md:block container mx-auto py-0 px-6"></div>

<div class="container mx-auto py-4 md:py-0 px-6">
  <div class="py-8">
        {{breadcrumbs}}
      </div>
  {{#if section.sections}}
      {{#each section.sections}}
        <section id="{{this.id}}" class="pt-4 pb-14 mb-12 bg-white">
          <h2 class="section-subtitle">{{this.name}}</h2>
          <ul class="list-none pl-0 mt-7 grid grid-cols-1 md:grid-cols-3 lg:grid-cols-2 gap-4" subsection={{this.id}}>
            {{!-- Iterate through articles in this section --}}
            {{#each this.articles}}
              <li>
                <a href="{{url}}" class="section-item-bullet flex gap-6">
                		<span class="flex align-center">â€¢</span>
                    <span class="flex">{{this.title}}</span>
                </a>
              </li>
            {{/each}}
          </ul>
        </section>
      {{/each}}
  {{/if}}
  {{#if section.articles}}
  <section class="pb-5 sm:pb-10 bg-no-repeat bg-origin-padding bg-brand-grey">
  <div class="container mx-auto text-center category-cards py-4 px-3 sm:py-10">
    <h2 class="text-2xl font-semibold text-center mb-4">Articles</h2>
    <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-2 sm:gap-8 px-5">
   <section id="{{section.id}}" class="article-section transform transition duration-300 ease-in-out shadow-sm hover:bg-white hover:scale-105 hover:shadow-lg hover:border-transparent hover:shadow-outline rounded-lg">
     <h2 class="section-subtitle">{{section.name}}</h2>
      <ul class="list-disc pl-8 mt-7" section={{section.id}}>
        {{!-- Iterate through articles in this section --}}
        {{#each section.articles}}
          <li>
                <a href="{{url}}" class="section-item-bullet">
                {{this.title}}
                </a>
              </li>
        {{/each}}
     </ul>
  </section>
  {{/if}}
  				
</div>