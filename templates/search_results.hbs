<div class="border-t border-gray-200"></div>
<div class="container mx-auto px-4">
  <nav class="flex items-center justify-between py-4">
    <div>{{breadcrumbs}}</div>
    <div class="flex items-center">
    
    </div>
  </nav>

  <div class="flex">
    <aside class="w-1/4 pr-4">
      <section class="bg-gray-100 p-4 rounded-lg">
        <h3 class="text-lg font-semibold mb-2">{{t 'filter_source'}}</h3>
        <ul>
          {{#each source_filters}}
            <li class="py-2">
              {{#if selected}}
                <a href="{{url}}" class="text-blue-500" aria-current="page">{{name}}</a>
              {{else}}
                <a href="{{url}}" class="text-gray-700">{{name}}</a>
              {{/if}}
              <span class="text-sm text-gray-500">({{count}})</span>
            </li>
          {{/each}}
        </ul>
      </section>
      <!-- Additional sections for type_filters, subfilters, and content_tag_filters follow a similar structure -->
    </aside>

    <section id="main-content" class="w-3/4">
      <h1 class="text-2xl font-bold mb-4">{{#if results}}{{t 'results' query=query count=results_count}}{{/if}}</h1>
      {{#if results}}
        <ul>
          {{#each results}}
            <li class="py-2">
              <article class="border-b border-gray-200 pb-4 mb-4">
                <header>
                  <h2 class="text-xl font-semibold"><a href="{{url}}" class="text-blue-500">{{title}}</a></h2>
                  <div class="flex items-center space-x-2 text-gray-500 text-sm">
                    <!-- Icons and metadata here -->
                  </div>
                </header>
                <p class="mt-2 text-gray-700">{{text}}</p>
              </article>
            </li>
          {{/each}}
        </ul>
      {{else}}
        <div class="text-center py-8">
          <p class="text-lg text-gray-600">{{t 'no_results_found'}}</p>
          <!-- Additional no results content -->
        </div>
      {{/if}}
    </section>
  </div>
  {{pagination}}
</div>
